  border-radius: 28rpx; /* Rounded corners to match the input fields */
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
  margin-top: 20rpx; /* Ensure space between form elements */
  background-repeat: no-repeat;
