/* Improved spacing and layout for a cleaner look */
.container {
  padding: 0;
}

/* Simplified form-box for a neat appearance */
.form-box {
  margin-top: 50rpx;
  padding: 20rpx;
  border-radius: 32rpx; /* Rounded corners for a modern, app-like feel */
  box-shadow: 0 14rpx 18rpx rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
}

/* Apply a general aesthetic to all form items for consistency */
.form-item {
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1); /* Uniform shadow for depth and consistency */
  margin-bottom: 20rpx; /* More space between form items */
  background-color: transparent;
}

/* Ensure the input fields are large enough to display the content comfortably */
.form-item input {
  width: 100%; /* Use full width of the form item container */
  height: 100rpx; /* Increase height to fit the content */
  padding: 0 30rpx; /* Adequate padding on the sides */
  font-size: 36rpx; /* Larger font size for better legibility */
  line-height: 100rpx; /* Center text vertically within the input field */
  border-radius: 15rpx;
  background-color: transparent; /* White background for clarity */
}
.input{
  padding-left: 74rpx;
  --td-input-bg-color:transparent;
  --td-input-border-color:transparent;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
