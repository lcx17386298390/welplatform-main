/* Stylish clear button */
.form-item .clear {
  width: 44rpx;
  height: 44rpx;
  right: 18rpx;
}

/* Center the submit button and apply game-like button style */
.login-btn {
  display: block;
  margin: 30rpx auto; /* Center button with automatic horizontal margins */
  padding: 80rpx 0;
  background-color: transparent; /* Change to a game-like vibrant color */
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: #000000;
  text-align: center;
  border-radius: 25rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
  font-size: 34rpx;
  font-weight: bold;
  transition: all 0.6s ease;
}
.login-btn:active {
  transform: scale(1.2);
}

/* Adjust the hover effect if you expect it to be used on platforms that support it */
.login-btn:hover {
  background-image: linear-gradient(45deg, #82c91e, #c0eb75); /* Lighten the gradient on hover */
}

