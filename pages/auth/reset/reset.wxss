/* 注册按钮样式 */
.reset-btn {
  height: 88rpx;
  /* 按钮高度，与输入框保持一致 */
  line-height: 88rpx;
  /* 行高，确保文本垂直居中 */
  font-size: 35rpx;
  /* 圆角大小 */
  left: 65rpx;
  /* 与验证码区域的距离 */
  color: #000000;
  /* Set the text color to black */
  width: 100%;
  /* 宽度设置为与输入框相同 */
  margin-top: 480rpx;
  --td-button-default-active-bg-color: transparent;
  --td-button-default-active-border-color: transparent;
  --td-button-default-bg-color: transparent;
  --td-button-default-border-color: transparent;
  background-size: 100% 115%;
  position: absolute;
}

.reset-btn:active {
  transform: scale(1.1);
}

.get {
  background-position: absolute;
  background-repeat: no-repeat;
  background-size: 100% 110%;
  transform: rotate(-10deg);
  z-index: 1;
}

.get:active {
  transform: scale(1.1);
}

